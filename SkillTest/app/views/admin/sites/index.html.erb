<div class="row">
    <div id="sidebar" class= "col-lg-4" >
        
        

    </div>

  <div id = "main" class= "col-lg-8">
    <h1>管理画面</h1>
    

    <table>
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.explanation %></td>
          <td><%= link_to 'Show', admin_site_path(site) %></td>
          <td><%= link_to 'Edit', edit_admin_site_path(site) %></td>
          <td><%= link_to 'Delete', admin_site_path(site),
                  method: :delete,
                  data: { confirm: 'This will delete the article.Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
      
    <%= link_to "サイト登録",  new_admin_site_url %><br> 



  </div>
</div>    