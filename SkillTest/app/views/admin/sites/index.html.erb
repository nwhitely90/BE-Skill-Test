<div id = "main" class= "col-lg-12">
  <h1>サイト管理</h1>


  <table>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= link_to '詳細', admin_site_path(site) %></td>
        <td><%= link_to '変更', edit_admin_site_path(site) %></td>
        <td><%= link_to '削除', admin_site_path(site),
                method: :delete,
                data: { confirm: 'サイトを削除してもよろしいでしょうか？' } %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "サイト登録",  new_admin_site_url %><br> 



</div> 