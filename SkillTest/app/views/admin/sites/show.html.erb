<div id = "main" class= "col-lg-12">
  <h1>サイト詳細</h1>

  <p>
    <strong>Name:</strong>
    <br>
    <%= @site.name %>
  </p>

  <p>
    <strong>Explanation:</strong>
    <br>
    <%= @site.explanation %>
  </p>
  
    <p>
    <strong>Site Url:</strong>
    <br>
    <%= link_to @site.site_url, front_site_path(@site.site_url) %>
  </p>

  <p>
    <strong>Active:</strong>
    <br>
    <% if @site.active == true %>
      有効
     <% else %>
      無効
    <% end %>
  </p>

  <p>
    <%= link_to "商品一覧へ", admin_products_path(:site_id => @site.id) %>

  </p>

  <%= link_to '編集', edit_admin_site_path(@site) %> |
  <%= link_to '戻る', admin_sites_path %>

</div>  

