<div id = "main" class= "col-lg-12">
<h1>サイト更新</h1>

<%= form_for @site, url: admin_site_path, method: :put do |a| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@site.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= a.label :name %><br>
    <%= a.text_field :name %>
  </p>
 
  <p>
  <div>
    <%= a.radio_button :active, true %>  
    <%= a.label :active, "アクティブ", :value => true %>
    
  </div>
  <div>
    <%= a.radio_button :active, false %>  
    <%= a.label :active, "非アクティブ", :value => false %>
    
  </div>  
  <p>
    <%= a.submit %>
  </p>

<% end %>
 
<%= link_to 'Back', admin_sites_path %>
</div>
