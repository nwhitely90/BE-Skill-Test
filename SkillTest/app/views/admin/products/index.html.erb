<div class="row">
    <div id="sidebar" class= "col-lg-4" >

    </div>

  <div id = "main" class= "col-lg-8">
    <h1>管理画面</h1>
    

    <table>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.amazon_id %></td>
          <td><%= product.title %></td>
          <td><%= link_to 'Show', admin_product_path(product) %></td>
          <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
          <td><%= link_to 'Delete', admin_product_path(product),
                  method: :delete,
                  data: { confirm: 'This will delete the article.Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
      
    <%= link_to "商品登録",  new_admin_product_url(:site_id => @site.id) %><br> 



  </div>
</div>    